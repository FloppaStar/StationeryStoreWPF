                                <TextBox Background="White" Width="50" Height="39" Name="TBoxCVV" FontSize="14" materialDesign:HintAssist.Hint="CVV" Style="{StaticResource MaterialDesignFloatingHintTextBox}" Margin="0 0 0 0" Text="{Binding CVV}"/>
                            </StackPanel>
                        </StackPanel>
